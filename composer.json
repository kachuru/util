{
    "name": "kachuru/util",
    "description": "Utility classes and methods that are fun to have around",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rupert Jones",
            "email": "ru@kachuru.uk"
        }
    ],
    "require": {
        "php": ">=7.4|>=8.0|>=8.1"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.2",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.7",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "scripts": {
        "spec": [
            "vendor/bin/phpspec run"
        ],
        "sniff": [
            "vendor/bin/phpcs --standard=PSR2 src/"
        ],
        "fix": [
            "vendor/bin/phpcbf --standard=PSR2 src/"
        ],
        "compatibility": [
            "vendor/bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 7.4- src/",
            "vendor/bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 8.0- src/",
            "vendor/bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 8.1- src/"
        ],
        "stan": [
            "vendor/bin/phpstan analyse src/ --level max"
        ],
        "test": [
            "@sniff",
            "@compatibility",
            "@spec",
            "@stan"
        ]
    },
    "autoload": {
        "psr-4": {
            "Kachuru\\": "src/Kachuru/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Kachuru\\": "spec/Kachuru/"
        }
    }
}
